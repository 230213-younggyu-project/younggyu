<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.korit.plant.repository.PlantRepository">
    <select id="getAllPlant" resultType="com.korit.younggyu.plant.web.dto.PlantAllDto">

    </select>

    <select id="getBusiness" resultType="com.korit.younggyu.plant.entity.BusinessEntity">

    </select>

    <select id="getTotalCpgEntity" resultType="com.korit.younggyu.plant.entity.TotalCpgEntity">
        select
            sum(today_cpg) as totalTpg,
            sum(today_cpg) * 30 as totalMpg,
            sum(max_cpg) as totalCpg
        from
            (select
                plant_id,
                code,
                max(cpg) - 	min(cpg) as today_cpg,
                max(cpg) as max_cpg
            from
                plant_data
            group by
                plant_id,
                code) temp_plant_data
    </select>
</mapper>

